<!DOCTYPE html>
@using HairSalon.Models;

<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>Hans' Salon</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Client: @Model["selectedClient"].GetName()</h1>
			</div>
      <h6><a href='/clients/edit/@Model["selectedClient"].GetId()'>Edit this client</a></h6>
			@if(Model!=null)
			{
				<h3>Assigned stylists:</h3>
				foreach (var stylist in @Model["clientStylists"])
				{
					<ul>
						<li><h4>@stylist.GetName()</h4></li>
					</ul>
				}
      }
      <hr>
			<h5><strong><a href="/">Home</a></strong> | <strong><a href="/stylists">Stylists</a></strong> | <strong><a href="/clients">Clients</a></strong></h5>
		</div>
  </body>
</html>
