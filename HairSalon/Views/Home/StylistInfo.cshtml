<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>Hans' Salon</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Stylist: @Model.GetName()</h1>
			</div>
			@if(Model!=null)
			{
				<h3>Client List:</h3>
				foreach (var client in @Model.GetClients())
				{
					<ul>
						<li><h4>@client.GetName()</h4></li>
					</ul>
				}
				<hr>
			}
			<h5><strong><a href="/stylists">Return to stylist list</a></strong></h5>
		</div>
  </body>
</html>
