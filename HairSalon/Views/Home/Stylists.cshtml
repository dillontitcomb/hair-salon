<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>Hans' Salon</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Your Stylists</h1>
				<h4>Click a stylist to see their list of clients.</h4>
			</div>
			<h5><strong><a class="btn btn-info" href="/stylists/add">Add a new stylist</a></strong></h5>
			<hr>
			@if(Model!=null)
			{
				foreach (var stylist in Model)
				{
					<h3><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h3>
				}
			}
			<hr>
      <form class="" action="/stylists/deleteall" method="post">
        <button type="submit" class="btn btn-danger">Delete all stylists</button>
      </form>
      <hr>
			<h5><strong><a href="/">Home</a></strong> | <strong><a href="/stylists">Stylists</a></strong> | <strong><a href="/specialties">Specialties</a></strong> | <strong><a href="/clients">Clients</a></strong></h5>
		</div>
  </body>
</html>
